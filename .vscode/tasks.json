{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-build",
            "label": "docker-build: debug",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "devantler-cms:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/devantler-cms/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/devantler-cms/devantler-cms.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "devantler-cms:latest",
                "dockerfile": "${workspaceFolder}/devantler-cms/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/devantler-cms/devantler-cms.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {
                "image": "devantler-cms:dev"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/devantler-cms/devantler-cms.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {
                "image": "devantler-cms:latest"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/devantler-cms/devantler-cms.csproj"
            }
        }
    ]
}